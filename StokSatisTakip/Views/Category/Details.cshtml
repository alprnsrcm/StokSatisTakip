@model List<EntityLayer.Entities.Product>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section id="slider">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <div class="col-sm-6">
                                <h1><span>STOKSATIS</span>TAKIP</h1>
                                <h2>Stok Yönetiminizi Kolaylaştırın</h2>
                                <p>Tüm Stoklarınızı Tek Bir Yerde Yönetin.</p>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/eshop/images/home/Depo.jpg" class="img-responsive slider-img" alt="" />
                            </div>
                        </div>
                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>STOKSATIS</span>TAKIP</h1>
                                <h2>Stok Takibini Hiç Olmadığı Kadar Kolay Hale Getirin</h2>
                                <p>Kolay entegrasyon, anlık takip, detaylı raporlama ve kullanıcı dostu arayüz ile stoklarınızı yönetin.</p>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/eshop/images/home/stok.jpg" class="img-responsive slider-img" alt="" />
                            </div>
                        </div>
                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>STOKSATIS</span>TAKIP</h1>
                                <h2>Kullanıcı Dostu Arayüz</h2>
                                <p>Basit ve etkili stok yönetimi.</p>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/eshop/images/home/Ekran.jpeg" class="img-responsive slider-img" alt="" />
                            </div>
                        </div>
                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            @await Component.InvokeAsync("Categories")

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <h2 class="title text-center">ÜRÜNLERİMİZ</h2>
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <a href="/Product/ProductDetails/@item.Id">
                                                <img src="~/Image/@item.Image" class="img-responsive product-img" alt="@item.Name" />
                                            </a>
                                            <h2>@item.Price</h2>
                                            <p>@item.Name</p>
                                            <a href="/Product/ProductDetails/@item.Id" class="btn btn-default add-to-cart">Ürün Detay</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                @await Component.InvokeAsync("PopularProduct")
            </div>
        </div>
    </div>
</section>

<style>
    .slider-img {
        width: 100%;
        height: 400px; /* Belirli bir yükseklik değeri */
        object-fit: cover; /* Resimlerin aynı boyutta görünmesini sağlar */
    }

    .product-image-wrapper {
        border: 1px solid #f7f7f7;
        overflow: hidden;
        margin-bottom: 30px;
    }

    .product-img {
        width: 100%;
        height: auto;
        max-height: 250px;
        object-fit: contain;
    }

    .productinfo h2 {
        color: #FE980F;
    }
</style>
