@model List<EntityLayer.Entities.Cart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Sepetine Hoşgeldin @User.Identity.Name</h2>

@*<h3>Sepetim</h3>*@
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Bilgisi</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Tarih</th>
            <th>Resim</th>
            <th>Sil</th>
            <th>Satın Al</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>
                    <div class="quantity-container">
                        @Html.ActionLink("-", "azalt", new { id = item.Id }, new { @class = "btn btn-info btn-sm azalt" })
                        @Html.TextBoxFor(x => item.Quantity, new { @class = "txt", data_id = item.Id })
                        @Html.ActionLink("+", "arttir", new { id = item.Id }, new { @class = "btn btn-info btn-sm arttir" })
                    </div>
                </td>
                <td>@item.Product.Price</td>
                <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</td>
                <td><img src="~/Image/@item.Product.Image" width="90" height="90" /></td>
                <td>@Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
                <td><a href="/Sales/Buy/@item.Id" class="btn btn-success">Satın Al</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
    @ViewBag.Tutar
</div>
<br />

<div class="container form-group text-right">
    <a href="/Sales/BuyAll" class="btn btn-success">Tümünü Satın Al</a>
    <a href="/Cart/DeleteRange" class="btn btn-danger">Hepsini Sil</a>
</div>

<style>
    .quantity-container {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .txt {
        width: 50px !important;
        height: 32px;
        font-size: 14px;
        text-align: center;
        border: solid 1px #ccc;
        margin: 0 5px;
    }

    .arttir, .azalt {
        cursor: pointer;
        border: solid 1px #ccc;
        text-align: center;
        font-size: 18px;
        padding: 5px 10px;
    }

    .form-group.text-right {
        text-align: right;
        margin-top: 20px;
    }

    .btn {
        margin: 5px;
    }
</style>

<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script>
    $(function () {
        $('.txt').on('change', function () {
            var miktar = $(this).val();
            var sepetid = $(this).attr('data-id');
            $.ajax({
                url: '/Cart/DinamikMiktar',
                data: { id: sepetid, miktari: miktar },
                success: function (res) {
                    document.location.reload();
                }
            });
        });
    });
</script>
