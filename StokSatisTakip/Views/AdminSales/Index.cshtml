@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<EntityLayer.Entities.Sales>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Satış Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Ürün Ad</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Resim</th>
        <th>Tarih</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Name</td>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td><img src="~/Image/@item.Product.Image" width="90" height="90" /></td>
                @* <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</td>*@
                <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy HH:mm:ss")</td>

            </tr>
        }

    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=> Url.Action("Index",new {sayfa}))

